<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:bottomRightRadius="@dimen/default_button_edge"
                     android:topRightRadius="@dimen/default_button_edge"/>
            <size android:width="@dimen/default_button_edge" android:height="@dimen/default_button_edge"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:bottomRightRadius="@dimen/default_edge_pressed"
                     android:topRightRadius="@dimen/default_edge_pressed"/>
            <size android:width="@dimen/default_edge_pressed" android:height="@dimen/default_edge_pressed"/>
        </shape>
    </item>

</selector>
