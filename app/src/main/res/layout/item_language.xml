<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_side_margin"
        android:paddingRight="@dimen/default_side_margin"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="Hindi" />

    <ImageView
        android:id="@+id/download_button"
        android:layout_width="@dimen/default_list_item_height"
        android:layout_height="@dimen/default_list_item_height"
        android:background="selectableItem"
        android:scaleType="center"
        android:tint="@color/colorAccent"
        tools:src="@drawable/download" />

</LinearLayout>