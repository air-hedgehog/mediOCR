<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/close"
            android:tint="@color/colorAccent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_side_margin"
            android:paddingRight="@dimen/default_side_margin"
            android:text="@string/recognition_result"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/share"
            android:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/save"
            android:tint="@color/colorAccent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="@dimen/default_side_margin">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            tools:text="some recognized text" />

    </ScrollView>


    <Switch
        android:id="@+id/formatting_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:padding="@dimen/default_side_margin"
        android:text="@string/original_text_formatting"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/primary_text" />

</LinearLayout>