<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/default_list_item_height"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="?android:attr/selectableItemBackground">

    <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/default_list_item_height"
            android:layout_height="@dimen/default_list_item_height"
            android:scaleType="center"
            android:tint="@color/colorAccent"
            tools:src="@drawable/shutter" />

    <Switch
            android:id="@+id/switch_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/default_side_margin"
            android:textSize="16sp"
            tools:text="@string/use_app_camera"/>

</LinearLayout>