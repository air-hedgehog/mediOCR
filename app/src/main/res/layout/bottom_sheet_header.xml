<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="@dimen/default_button_edge"
        android:layout_height="@dimen/default_button_edge"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="center"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/rotate_left_button"
        style="@style/PreviewButtonsStyle"
        android:src="@drawable/rotate_left" />

    <ImageView
        android:id="@+id/rotate_right_button"
        style="@style/PreviewButtonsStyle"
        android:src="@drawable/rotate_right" />

    <RelativeLayout
        android:id="@+id/align_layout"
        style="@style/PreviewButtonsStyle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/format_columns"
            android:tint="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/secondary_text"
            tools:text="auto" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/language_layout"
        style="@style/PreviewButtonsStyle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/language"
            android:tint="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/secondary_text"
            tools:text="eng\njav\nrus" />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/recognise_button"
        android:layout_width="@dimen/small_button_edge"
        android:layout_height="@dimen/small_button_edge"
        android:layout_marginLeft="@dimen/default_side_margin"
        android:layout_marginRight="@dimen/default_side_margin"
        android:src="@drawable/text_subject"
        tools:background="@drawable/square_button_bg" />

</LinearLayout>